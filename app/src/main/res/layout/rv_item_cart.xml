<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <CheckBox
        android:id="@+id/checkbox_cart"
        android:layout_alignParentLeft="true"
        android:checked="true"
        android:layout_width="50dp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_toRightOf="@id/checkbox_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_cart_goods_pic"
            android:layout_alignParentLeft="true"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_cart_goods_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_cart_goods_pic"
            android:layout_marginLeft="8dp"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_cart_goods_price"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_cart_goods_pic"
            android:layout_marginLeft="8dp"
            android:textColor="#f4c521"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cart_add"
            android:text="+"
            android:textStyle="bold"
            android:background="@drawable/shape_btn_cart"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tv_cart_goods_num"
            android:text="1"
            android:padding="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_cart_sub"
            android:text="-"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/shape_btn_cart"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </LinearLayout>

</RelativeLayout>
