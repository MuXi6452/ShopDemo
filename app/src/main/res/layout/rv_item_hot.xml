<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_hot"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_hot_title"
        android:layout_toRightOf="@id/iv_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_hot_price"
        android:layout_toRightOf="@id/iv_hot"
        android:layout_below="@id/tv_hot_title"
        android:layout_width="50dp"
        android:textColor="#f4c521"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_hot"
        android:text="+"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:background="@drawable/shape_btn_cart_add"
        android:gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
</RelativeLayout>
